  <h2>üéØ Visualize um Grid</h2>

  <div class="demo-controls">
    <label for="columns">Colunas:</label>
    <input type="number" id="columns" value="3" min="1" max="6">

    <label for="gap">Espa√ßamento (gap):</label>
    <input type="number" id="gap" value="10" min="0" max="50">

    <button onclick="atualizarGrid()">Atualizar Grid</button>
  </div>

  <div id="gridDemo" class="grid-container">
    <div class="grid-item">1</div>
    <div class="grid-item">2</div>
    <div class="grid-item">3</div>
    <div class="grid-item">4</div>
    <div class="grid-item">5</div>
    <div class="grid-item">6</div>
  </div>

  <script>
    function atualizarGrid() {
      const colunas = document.getElementById('columns').value;
      const gap = document.getElementById('gap').value;
      const grid = document.getElementById('gridDemo');

      grid.style.gridTemplateColumns = `repeat(${colunas}, 1fr)`;
      grid.style.gap = `${gap}px`;
    }
  </script>
