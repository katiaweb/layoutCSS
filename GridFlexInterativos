    <tr><td>grid-template-rows</td><td>Define linhas</td><td>100px 200px</td></tr>
    <tr><td>gap</td><td>Espa√ßo entre c√©lulas</td><td>10px</td></tr>
    <tr><td>grid-column</td><td>Item ocupa v√°rias colunas</td><td>1 / 3</td></tr>
    <tr><td>grid-area</td><td>Nomeia √°reas</td><td>"header"</td></tr>
